{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": false,

    "rootDir": "src",
    "outDir": "dist",
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,

    "lib": ["es2020", "es2019", "es2018", "DOM"],

    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"]
    }
  },

  "include": [
    "src"
  ]

}