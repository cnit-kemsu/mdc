{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "ES2015",
    "target": "ES2019",
    // "allowJs": true,
    // "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "sourceMap": true,
    // "removeComments": true,
    // "strict": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "importHelpers": true,

    "lib": ["es2020", "es2019", "es2018", "DOM"],

    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@lib": ["./src/lib/"],
      "@src/*": ["./src/*"]
    }
  },

  "exclude": [
    "node_modules",
    "example",
    "dist"
  ]

}